<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Brandstof Cafe</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyBrandstofCafe.styles.css" asp-append-version="true" />
</head>

<body>
    
    <header>
            <nav class="navbar bg-primary border-bottom box-shadow">
                <a asp-page="/Index"><img src="./Images/NHLStendenLogo.jpg" class="customIcon rounded float-start " alt="NhlStendenLogo" style="width: 4rem; height: 4rem;"></a>
                <a class="navbar-brand text-white" asp-page="/Index">MyBrandstofCafe</a>
            </nav>
            <!--nog wat bugs maar werkend!!-->
        <div class="container-fluid" style="background-color:ghostwhite; height: 3rem; width: 100%; align-content: center; justify-content: center;">
            <button type="button" class="btn btn-outline-info"><a href="../Index">Start</a></button>
            <button type="button" class="btn btn-outline-info"><a href="../Bestellingen/Index">Bestellen</a></button>
            <button type="button" class="btn btn-outline-info"><a href="../Plattegrond/Index">Plattegrond</a></button>
            <button type="button" class="btn btn-outline-info"><a href="../Voorraad/Index">Voorraad</a></button>
            <button type="button" class="btn btn-outline-info"><a href="../Werknemer/Index">Werknemer</a></button>
            <button type="button" class="btn btn-outline-info"><a href="../Documentatie">Documentatie</a></button>
        </div>
    </header>

    <!--Image voor achtergrond-->
    <div class="bg-image">
    </br>


    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    </div>
    <footer class="border-top footer text-white bg-primary">
        <div class="container">
            &copy; 2024 - MyBrandstofCafe - <a class="text-light" asp-page="/Contact">Contact</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>